        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://blitzchatapp.herokuapp.com/messages.js"></script>
    <script src="https://blitzchatapp.herokuapp.com/main.js"></script>

    <%- include('_footer') %>